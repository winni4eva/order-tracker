{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
    <h1>Home</h1>
    <div class="row">
        <div class="col-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                    <th scope="col">State</th>
                    <th scope="col">No. Items</th>
                    <th scope="col">Shipping Details</th>
                    <th scope="col">Total</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for index, order in pagination %}
                        <tr>
                            <td>{{order.state}}</td>
                            <td>{{order.orderItems|length}}</td>
                            <td>{{order.orderShippingDetail.country}} - {{order.orderShippingDetail.state}}</td>
                            <td>{{order.total}}</td>
                            <td>{{order.discount}}</td>
                            <td>
                                {% if order.getShippedBoxes()[0].getLabelImage() is defined %}
                                    <img width="150" height="150" src="{{ asset(order.getShippedBoxes()[0].getLabelImage()) }}"/>
                                {% endif %}
                            </td>
                            <td>
                                {% if order.state is same as 'ORDER_RECEIVED' %}
                                    <a href="{{ path('cancel_order', { id: order.id, state: 'ORDER_CANCELED' }) }}">
                                        cancel
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
        <div class="col-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="col-sm-12">
                <input type="submit" value="Send" class="btn btn-success float-right" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}