{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h6>Picker</h6>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">State</th>
                    <th scope="col">No. Items</th>
                    <th scope="col">Shipping Details</th>
                    <th scope="col">Total</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Details</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for index, order in orders %}
                        <tr>
                            <th scope="row">{{index + 1}}</th>
                            <td>{{order.state}}</td>
                            <td>{{order.orderItems|length}}</td>
                            <td>{{order.orderShippingDetail.country}} - {{order.orderShippingDetail.state}}</td>
                            <td>{{order.total/100}}</td>
                            <td>{{order.discount}}</td>
                            <td>
                                <a href="{{ path('picker_view_order', { id: order.id }) }}">
                                    View
                                </a>
                            </td>
                            <td><button>Pick / Complete</button></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-3">
        {% if order is defined %}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Item Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">State</th>
                        <td>Items</td>
                        <td>Shipping</td>
                        <td>Total</td>
                        <td>Discount</td>
                    </tr>
                    <tr>
                        <td>{{order.state}}</td>
                        <td>
                            {% for index, item in order.orderItems %}
                            <ol>
                                <li>#{{index+1}}</li>
                                <li>{{item.name}}</li>
                                <li>{{item.price}}</li>
                                <li>{{item.quantity}}</li>
                            </ol>
                            {% endfor %}
                        </td>
                        <td>
                            <ol>
                                <li>Country: {{order.orderShippingDetail.country}}</li>
                                <li>State: {{order.orderShippingDetail.state}}</li>
                                <li>Zip: {{order.orderShippingDetail.zip}}</li>
                                <li>Street: {{order.orderShippingDetail.street}}</li>
                                <li>Phone: {{order.orderShippingDetail.phone}}</li>
                            </ol>
                        </td>
                        <td>{{order.total/100}}</td>
                        <td>{{order.discount}}</td>
                    </tr>
                </tbody>
            </table>

            {% if order.issue is defined %}
            <h6>Issue</h6>
            {% endif %}
        {% endif %}
        </div>
    </div>
</div>
{% endblock %}